extends layout.pug

block append content
	div.padding#movie
		div#movieContainer
			div#movieRight
				img(src=movie.imagepath.big)
			div#movieLeft
				h1= movie.title
				p= movie.description
				ul
					li
						b Year:
						span= " "+movie.year
					li
						b Director:
						span= " "+movie.director
					if movie.actors.length > 0
						li 
							b Actors:
							ul
								for a in movie.actors
									li= a.name
		div#movieScreenings
			h2 Find a screening
			div#movieScreeningsSearch
				div.inlineInput
					input(type="date" value=moment().format("YYYY-MM-DD") min=moment().format("YYYY-MM-DD"))
				div.inlineInput
					select
						option Turku
			div.tableSection.hideable
				h2.hidebutton Screenings
				div.hidecontent.tableContainer
					table#movieScreeningsTable
						tr
							th.medium City
							th.medium Date
							th.medium Time
							th.medium Resorvations
							th.shrink
							th.small
				
